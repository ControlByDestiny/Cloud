<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
    <View
        android:background="@drawable/gradient_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
    <RadioGroup
        android:id="@+id/act_rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/act_rbtn_hp"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/act_rbtn_hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="主页"
            android:padding="@dimen/bottom_guid_padding"
            android:textColor="@drawable/selector_btn_text"
            android:textSize="@dimen/bottom_guid_font"/>

        <RadioButton
            android:id="@+id/act_rbtn_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="大棚"
            android:padding="@dimen/bottom_guid_padding"
            android:textColor="@drawable/selector_btn_text"
            android:textSize="@dimen/bottom_guid_font"/>

        <RadioButton
            android:id="@+id/act_rbtn_expert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/bottom_guid_padding"
            android:text="控制"
            android:textColor="@drawable/selector_btn_text"
            android:textSize="@dimen/bottom_guid_font" />

        <RadioButton
            android:id="@+id/act_rbtn_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="我的"
            android:padding="@dimen/bottom_guid_padding"
            android:textColor="@drawable/selector_btn_text"
            android:textSize="@dimen/bottom_guid_font"/>
    </RadioGroup>
</LinearLayout>